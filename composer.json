{
	"name": "flexsyscz/auto-loader",
	"description": "Extension for Nette Framework providing the auto-loading of required classes.",
	"keywords": ["flexsyscz", "autoloading", "config", "di", "compiler"],
	"homepage": "https://www.flexsys.cz",
	"license": ["BSD-3-Clause", "GPL-2.0-only", "GPL-3.0-only"],
	"authors": [
		{
			"name": "Václav Lukeš",
			"homepage": "https://www.vaclavlukes.cz"
		}
	],
	"require": {
		"php": ">=8.1",
		"flexsyscz/environment": "^1.0",
		"nette/di": "^3.0",
		"nette/robot-loader": "^3.4"
	},
	"require-dev": {
		"nette/tester": "^2.4",
		"phpstan/phpstan-nette": "^1.0",
		"nette/coding-standard": "^3.2",
		"nette/bootstrap": "^3.1"
	},
	"autoload": {
		"classmap": ["src/"]
	},
	"minimum-stability": "stable",
	"scripts": {
		"phpstan": "phpstan analyse",
		"tester": "tester tests -s"
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.0-dev"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	}
}
